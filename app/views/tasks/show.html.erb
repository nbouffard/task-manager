<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<%= label_tag 'Completed?' %>
<%= check_box_tag 'Completed?', 'no', @task.completed? %>


<br>
<%= link_to 'Delete task', task_path(@task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure??' } %>
<%= link_to 'Edit task', edit_task_path(@task) %>
<%= link_to 'Back to list', root_path %>
